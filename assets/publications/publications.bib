@preprint{parsonsUltraEfficientThermallyUndercut2025,
  abstract      = {Silicon photonic devices fundamental to high-density wavelength-division multiplexed (DWDM) optical links and photonic switching networks, such as resonant modulators and Mach-Zehnder interferometers (MZIs), are highly sensitive to fabrication variations and operational temperature swings. However, thermal tuning to compensate for fabrication and operational temperature variations can result in prohibitive power consumption, challenging the scalability of energy-efficient photonic integrated circuits (PICs). In this work, we develop and demonstrate a wafer-scale thermal undercut in a 300 mm complementary metal oxide semiconductor (CMOS) foundry that dramatically improves the thermal isolation of thermo-optic devices by selectively removing substrate material beneath the waveguides and resonators. This approach significantly reduces the power required for thermal tuning across multiple device architectures, achieving almost a 5\${\textbackslash}times\$ improvement in tuning efficiency in a state-of-the-art 4.5 \${\textbackslash}mu\$m radius microdisk modulator and a 40\${\textbackslash}times\$ improvement in efficiency for a MZI phase shifter. Additionally, to the best of the authors' knowledge, we demonstrate the first wafer-scale analysis of the impact of undercut trench geometry on device performance using comprehensive wafer-scale measurements across 64 reticles of a 300 mm silicon-on-insulator (SOI) wafer. These results highlight the effectiveness of this wafer-scale thermal undercut technique in minimizing energy consumption, paving the way for scalable, ultra low-power silicon photonic systems.},
  archiveprefix = {arXiv},
  author        = {Parsons, Robert and Jang, Kaylx and Wang, Yuyang and Novick, Asher and Smith, A. Matthew and Tison, Christopher C. and Gebregiorgis, Yonas and Deenadayalan, Venkatesh and van Niekerk, Matthew and Carpenter, Lewis and Ngai, Tat and Leake, Gerald and Coleman, Daniel and Meng, Xiang and Preble, Stefan and Fanto, Michael L. and Bergman, Keren and Rizzo, Anthony},
