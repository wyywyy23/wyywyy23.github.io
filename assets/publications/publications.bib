@article{wuFlexibleSiliconPhotonic2024,
  title = {Flexible Silicon Photonic Architecture for Accelerating Distributed Deep Learning},
  author = {Wu, Zhenguo and Yuan Dai, Liang and Wang, Yuyang and Wang, Songli and Bergman, Keren},
  year = {2024},
