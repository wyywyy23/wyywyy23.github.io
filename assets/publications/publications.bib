@article{novickHighbandwidthDensitySilicon2023,
  title = {High-Bandwidth Density Silicon Photonic Resonators for Energy-Efficient Optical Interconnects},
  author = {Novick, A. and James, A. and Dai, L. Y. and Wu, Z. and Rizzo, A. and Wang, S. and Wang, Y. and Hattink, M. and Gopal, V. and Jang, K. and Parsons, R. and Bergman, K.},
  year = {2023},
