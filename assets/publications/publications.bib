  eprint        = {2503.09009},
  file          = {files/1768/Parsons et al. - 2025 - Ultra-Efficient Thermally Undercut Silicon Photonic Devices in a 300 mm CMOS Foundry Process.pdf},
  keywords      = {Physics - Applied Physics,Physics - Optics},
